<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="author" content="Eric Mackrodt">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>The Eric Experiment</title>
  <link rel="stylesheet" href="/assets/modern.css" />
  @html.block('seo')
</head>
<body>
<div class="window-border" id="main-window">
  <div class="window">
    <div class="title">
      <div class="close">
        <span class="shadow">
          &#8212;
        </span>
        <span class="text">
          &#8212;
        </span>
      </div>
      The Eric Experiment
      <div class="button-container">
        <div class="button maximise">
          <span>
            &#9650;
          </span>
        </div>
      </div>
      <div class="button-container">
        <div class="button minimise">
          <span>
            &#9660;
          </span>
        </div>
      </div>
    </div>
    
    <div id="banner"></div>

    <div class="menubar">
      @model.mainMenu.forEach(function (item) {
        <a href="@item.path" class="menuitem">
            @item.label
        </a>
      })
    </div>

    <div class="content">
      <section id="page">
        <div id="content">
          @html.block('content')
        </div>
        @(model.showSideContent ? html.extend('modern/side-content', function() {}) : '')

        <div class="icons">
          <div class="icon" id="categories-icon" style="display: none;">
            <img src="/assets/folder-icon.png" alt="Categories" />
            <div class="text">Categories</div>
          </div>
          <div class="icon" id="twitter-icon" style="display: none;">
            <img src="/assets/folder-icon.png" alt="Twitter" />
            <div class="text">Twitter</div>
          </div>
          <div class="icon" id="soundcloud-icon" style="display: none;">
            <img src="/assets/folder-icon.png" alt="SoundCloud" />
            <div class="text">SoundCloud</div>
          </div>
          <div class="icon" id="compatibility-icon" style="display: none;">
            <img src="/assets/folder-icon.png" alt="Compatibility" />
            <div class="text">Compatibility</div>
          </div>
        </div>
      </section>
      <section id="footer">
        @html.extend('modern/tags', function () {})
      </section>
    </div>
  </div>
  <div class="handle topright"></div>
  <div class="handle bottomright"></div>
  <div class="handle topleft"></div>
  <div class="handle bottomleft"></div>
</div>

<div class="icons">
  <div class="icon" id="main-icon" style="display: none;">
    <img src="/assets/root-icon.png" alt="The Eric Experiment" />
    <div class="text">The Eric Experiment</div>
  </div>
</div>
<script type="text/javascript" src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script type="text/javascript" src="/assets/client.js"></script>
</body>
</html>